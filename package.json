{
	"name": "load-secrets-action",
	"version": "3.0.0",
	"description": "Load Secrets from 1Password",
	"type": "module",
	"main": "dist/index.js",
	"directories": {
		"test": "tests"
	},
	"scripts": {
		"bundle": "npm run format:write && npm run build",
		"build": "ncc build ./src/index.ts",
		"format": "prettier --ignore-path ./config/.prettierignore",
		"format:check": "npm run format -- --check ./",
		"format:write": "npm run format -- --write ./",
		"lint": "eslint . -c ./.github/linters/.eslintrc.yml",
		"lint:fix": "npm run lint -- --fix",
		"prepare": "husky install ./config/.husky",
		"test": "jest --config=./config/jest.config.js",
		"test:clearcache": "jest --clearCache",
		"test:coverage": "npm run test -- --coverage",
		"test:watch": "npm run test -- --watch",
		"typecheck": "tsc",
		"local-action": "npx local-action . src/main.ts .env",
		"validate": "npm run format:check && npm run lint && npm run test:coverage && npm run typecheck && npm run build"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/1Password/load-secrets-action.git"
	},
	"keywords": [
		"actions",
		"1password",
		"load secrets",
		"connect"
	],
	"author": "1Password",
	"license": "MIT",
	"bugs": {
		"url": "https://github.com/1Password/load-secrets-action/issues"
	},
	"homepage": "https://github.com/1Password/load-secrets-action#readme",
	"dependencies": {
		"@1password/connect": "^1.4.1",
		"@1password/sdk": "^0.1.3",
		"@actions/core": "^1.11.1"
	},
	"devDependencies": {
		"@1password/front-end-style": "^6.0.1",
		"@github/local-action": "^2.2.0",
		"@types/jest": "^29.5.12",
		"@types/node": "^20.11.30",
		"@typescript-eslint/eslint-plugin": "^8.15.0",
		"@vercel/ncc": "^0.38.1",
		"eslint-plugin-jest": "^28.9.0",
		"husky": "^9.0.11",
		"jest": "^29.7.0",
		"lint-staged": "^15.2.2",
		"prettier": "^3.3.3",
		"prettier-eslint": "^16.3.0",
		"ts-jest": "^29.1.2",
		"typescript": "^5.4.2"
	},
	"prettier": "./node_modules/@1password/front-end-style/prettierrc.json"
}
